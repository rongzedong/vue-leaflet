{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "tests/**/*"],
  "exclude": ["./dist/**/*"],
  "compilerOptions": {
     "verbatimModuleSyntax": true,
    "ignoreDeprecations": "5.0",
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "types": [
      "node",
    ],
    "outDir": "./dist",
    "noImplicitAny": false
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
